<h1><%= t('Alerts')%></h1>
<h2><%= t('Please select the team you want to monitor')%></h2>

<% form_tag(update_alerts_path, :method => :put) do %>
<table class="full">
  <thead>
    <th><%= t('Teams') %></th>
    <th><%= t('Hash') %></th>
    <th><%= t('Link to the alert page') %></th>
  </thead>
  <tbody>
    <% @teams.each do |team| %>
    <tr>
      <td>
        <%= link_to team.name, team_path(team) %>
      </td>
      <td>
        <% hash_id = "hash_#{team.id}" %>
        <% value = ""
           value = team.alert.hash_value if team.alert %>
        <%= text_field(:alert, :"#{hash_id}", :id => hash_id, :value => value) %>
        <%= button_to_function(t("Generate a hash"), "tosca_generate_hash('#{hash_id}')") %>
      </td>
      <td>
        <% text = t("Alert page for team %s") % team %>
        <%= link_to text, :action => :show, :hash => value %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<p><%= submit_tag t('Validate') %></p>
<% end %>
