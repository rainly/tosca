<% version = @release.version %>
<% software = @release.software %>
<%= public_link_to t('Home'), welcome_path %> >
 <%= public_link_to t('Software'), softwares_path %> >
  <%= public_link_to software.group.name, software_path(software.group_id) %> >
   <%= public_link_to software, software_path(software) %> >
    <%= link_to version, version_path(version) %> >
      <%= h @release %> <%= link_to_edit(@release) %>

<h2><%=t('Release')%></h2>
<div class="show">
 <p><b><%=t('Software')%>:</b> <%= public_link_to software, software_path(software) %></p>
 <p><b><%=t('Contract')%>:</b> <%= link_to @release.contract.client, contract_path(@release.contract) %></p>
 <p><b><%=t('Version')%>:</b> <%= link_to version, version_path(version) %></p>
 <p><b><%=t('Release')%>:</b> <%= @release %></p>
 <p><b><%=t('Packaged ?')%></b> <%= t('Yes') if @release.packaged? %></p>
 <p><b><%=t('Active ?')%></b> <%= t('Yes') unless @release.inactive? %></p>
 
 <% if @release.changelog %>
 <fieldset>
   <legend><%=t('Changelog') %></legend>
   <p><%= @release.changelog %></p>
 </fieldset>
 <% end %>
</div>

<div class="show">
<p><b><%= pluralize(@release.archives.count, t('archive') ) %></b> <%= link_to_new_archive(@release.id) %></p>
  <p>
  <% if @release.archives.count > 0 %>
    <% options = { :no_title => true, :edit => 'archive'} %>
    <%= show_list(@release.archives, t('archive'), options) { |a|
      link_to a.name, archive_path(a)
    } %>
  <% end %>
</div>

<p>&nbsp;</p>

<%= link_to_edit_and_list(@release) %>
