<% user = @session_user  %>

<table id="issues_list" class="full">
  <tr>
    <th width='2%'><%= _('Id') %></th>
    <th width='7%'><%= _('Software') %></th>
    <th width='7%' colspan="2"><%= _('Type')%></th>
    <% if user.engineer? %>
      <th width='7%'><%= _('Client')%></th>
    <% end %>
    <th><%= _('Summary')%></th>
    <th width='10%'>
      <% if user.engineer? %>
        <%=_('Owner')%>
      <% else %>
        <%=_('Recipient')%>
      <% end %>
    </th>

    <th width='8%'><%=_('Updated on')%></th>
  </tr>

  <% recipient = User.new %>
  <% for issue in @issues %>
    <tr <%= tr_attributes(issue_path(issue)) %>>
      <td><%= issue.id %></td>
      <td><%= issue.software_name %></td>
      <td></td>
      <td nowrap="nowrap">
        <span class="issue_<%=issue.statut_id%>">&nbsp;
        <%= issue.issuetype.name %><%= image_severity(issue) %></span>
      </td>
      <% if user.engineer? %>
        <td><%= issue.client_name %></td>
      <% end %>
      <% recipient = issue.recipient if user.recipient? and recipient.id != issue.recipient_id %>
      <td><b><%= link_to_issue issue %></b></td>
      <td>
        <% if user.engineer? %>
          <%= name(issue.engineer) %>
        <% else %>
          <%= recipient %>
        <% end %>
      </td>
      <td><span class="date"><%= issue.updated_on_formatted %></span></td>
    </tr>
  <% end %>

  <% if @issues.size == 0 %>
    <tr><td colspan="11">
        <p><%= _("No issue found.") %></p>
    </td></tr>
  <% end %>

</table>
