<% cache("issues/#{@issue.id}/info-#{@session_user.kind}") do %>

  <%= div_toggle t('Summary'), 'menu_resume', :class => "menu_title" %>
  <ul id="menu_resume">
    <li><b><%= t("Software") %>: </b><%= link_to_issue_software @issue %></li>
    <li><b><%=t("Status")%>: </b>
    <%= link_to_box_on_status(@issue) %> <%=help_on_status%></li>
    <li><b><%= t("Type")%>: </b><%= @issue.issuetype.name %></li>
    <li><b><%= t("Severity")%>: </b>
    <%= @issue.severity.name %> <%=help_on_severity%></li>
    <% unless @issue.mail_cc.blank? %>
      <li><b><%= t('CC') %>: </b><%= @issue.mail_cc.gsub(',', ',<br />') %></li>
    <% end %>
    <% submitter_id = @issue.submitter_id %>
    <% if submitter_id != 0 and @issue.recipient.id != submitter_id %>
      <li><b><%=t("Declared by")%>: </b><%= link_to_user(@issue.submitter) %></li>
    <% end %>
    <% if @issue.engineer %>
      <li><b><%=t("Assigned to")%>: </b> <%= link_to_user(@issue.engineer) %> </li>
    <% end %>
  </ul>

  <%= div_toggle t('Recipent'), 'menu_recipient', :class => "menu_title" %>
  <% user = @issue.recipient %>
  <ul id="menu_recipient">
    <li><b><%= t("Contact") %>: </b><%= mail_to(user.email, user.name)%>
    <%= link_to_show(account_path(user)) if @session_user.engineer? %></li>
    <li><b><%= t('Phone') %>: </b><%= user.phone %></li>
    <% contract = @issue.contract %>
    <li><b><%= t('Concerning') %>: </b><%= link_to contract, contract_path(contract) %></li>
  </ul>

  <%= div_toggle t("Life cycle"), 'life_cycle_menu', :class => "menu_title" %>
  <ul id="life_cycle_menu">
    <li><b><%= t("Created on") %>: </b><%= @issue.created_on_formatted %></li>
    <li><b><%= t("Updated on") %>: </b><%= @issue.updated_on_formatted %></li>
    <% if @issue.elapsed %>
      <li><b><%= t("Time elapsed") %>: </b><%= @issue.elapsed_formatted %></li>
    <% end %>
    <% contribution = @issue.contribution %>
    <% if contribution %>
      <li><%= link_to_issue_contribution(contribution) %></li>
    <% end %>
  </ul>

  <%= div_toggle t("Tags"), 'tags_menu', :class => "menu_title", :hide => true %>
  <ul id="tags_menu" style="display: none">
    <% unless @issue.tag_list.empty? %>
      <li><b><%= t("Tags") %>: </b><%= @issue.tag_list.join(', ') %></li>
    <% end %>
    <% if @session_user.engineer? %>
      <li><%= link_to t("Edit the tags for this issue"), tag_issue_url(@issue) %></li>
    <% end %>
  </ul>

  <%= render :partial => 'issues/panel/panel_subscribers' %>

  <%= div_toggle t("Help"), 'menu_help', :class => "menu_title" %>
  <ul id="menu_help">
    <li><%= public_link_to_howto_issue %></li>
  </ul>

<% end # Cache %>
