<h1><%= t("Submit an issue") %> <%= StaticPicture::spinner %></h1>

<p><%= t("Please fill in the fields below.") %><br />
   <%= t("One of our consultants will then contact you in less than one hour.") %></p>

<% form_tag( issues_path, {:multipart => true, :id => 'main_form',
             :name => 'main_form' }) do %>
  <%= render :partial => 'form' %>
  <%= submit_tag t("Submit this issue") %>
<% end %>

<p>&nbsp;</p>

<%= link_to_back %>

<p>&nbsp;</p>

<% user = @session_user %>
<% if false and user.recipient? #deactivated, for now %>
<% client = user.client %>
<p><%= t("Nota : One day work corresponds to the time of opening of the daily service defined in the contract %s : %s, that is to say %s hours.") % [ client.name, client.support.name, client.support.interval ] %>
<br /><%= t("The working days are from Monday to Friday, except weekends and public holidays.") %></p>
<% end %>
