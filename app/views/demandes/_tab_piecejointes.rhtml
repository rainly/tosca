<%= render :partial => 'tab_menu' %>


<div id='demande_tab_content' class='demande_tab_content'>
  <b><u><%= pluralize(@piecejointes.size, 'Piècejointe') %></u></b> 
  <% titres = ['Id', 'Lien', 'Taille', 'Créé le', 'Par' ] %>
  <%= show_table(@piecejointes, Piecejointe, titres, :total => false) {|pj| 
    result = ''
    if File.exist?(pj.file)
      result << "<td>##{pj.id}</td>"
      result << "<td>#{link_to_file(pj, 'file')}</td>"
      result << "<td>#{file_size(pj.file)}</td>"
      result << "<td>#{pj.commentaire.created_on_formatted}</td>"
      result << "<td>#{pj.commentaire.identifiant.nom}</td>"
    end
    result
  } %>
  <p>&nbsp;</p>
</div>
