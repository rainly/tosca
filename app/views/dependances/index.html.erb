<h1>Dépendances</h1>

<table>
  <tr>
  <% for column in Dependance.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>

<% for dependance in @dependances %>
  <tr>
  <% for column in Dependance.content_columns %>
    <td><%=h dependance.send(column.name) %></td>
  <% end %>
    <%= link_to_actions_table dependance %>
  </tr>
<% end %>
</table>

<%= link_to 'Page précédente', { :page => @dependance_pages.current.previous } if @dependance_pages.current.previous %>
<%= link_to 'Page suivante', { :page => @dependance_pages.current.next } if @dependance_pages.current.next %>

<br />

<%= link_to 'Ajouter une dépendance', new_dependance_path %>
