<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="fr" lang="fr">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8;" />
  <link rel="shortcut icon" href="<%=image_favicon_ico%>" type="image/x-icon" />
  <link rel="icon" href="<%=image_favicon_png%>" type="image/png" />
  <title>08000linux : <%= controller.controller_name %></title>
  <%= stylesheet_link_tag('comments', 'tools', 'helper',  'demandes') %>
  <%= stylesheet_link_tag 'common', :media => "all" %>
  <%= stylesheet_link_tag 'common-printer', :media => "print" %>
  <%= stylesheet_link_tag('info_box', 'auto_complete', 'toolbar', 'accueil') %>
  <%= stylesheet_link_tag('menu', 'reporting') %>

  <% # Include TinyMCE with gzip before other JS to avoid problems %>
  <% if using_tiny_mce? %>
    <%= javascript_include_tiny_mce %>
    <%= tiny_mce %>
  <% end %>
  <%= javascript_include_tag 'calendar', 'calendar-fr', 'calendar-setup' %>
  <%= stylesheet_link_tag 'calendar'%>

  <%# = javascript_include_tag 'snap_preview_anywhere' %>
  <%= javascript_include_tag :defaults %>
</head>

<body>

  <div id="header">
    <table width="100%" height="100%" cellspading="0" cellspacing="0">
      <tr valign="top">
        <td><%= logo_08000 %></td>
        <td align="right"><%= session[:account_links] if session[:user] %></td>
      </tr>
    </table>
    <%# This menu is built during login, in account controller. %>
    <%# And is in session for better perf (~ +30% on all pages) %>
    <%= session[:menu] if session[:user] %>
  </div><!-- end of header -->

  <div id="content_div">

  <div id="information">
     <% if flash[:notice] %>
       <div class="information notice" id="information_notice">
         <p><%= flash[:notice] %></p>  
       <a class="close_information" onclick="Element.hide('information_notice')">Fermer</a>
       </div>
     <% end %>
     <% if flash[:warn] %>
       <div class="information error" id="information_error">
         <h2>Une erreur s&#146;est produite</h2>
         <ul><li><%= flash[:warn] %></li></ul>
       <a class="close_information" onclick="Element.hide('information_error')">Fermer</a>
       </div>
     <% end %>
  </div><!-- end of information -->

  <table id="content_table">
  <tr valign="center">
    <% if @partial_for_summary %>
    <td width="1px" height="100%">
      <div id="summary" class="summary"><%= render_partial @partial_for_summary %></div>
    </td>
    <td class="summary_toogle" width="1px" height="100%"  
        onclick="Element.toggle('summary')" title="Montrer/cacher le menu latÃ©ral">. . .
    </td>
    <% end %>
    <td>
      <div id="bodycontent"><%= @content_for_layout %></div>
    </td>
  </tr>
  </table><!-- end of content_table -->

  </div><!-- end of content_div -->

  <div id="footer">
    <table width='100%'>
      <tr>
        <td valign='middle' align='center'>
	  <%= link_to Metadata::NOM_LONG_SERVICE, Metadata::SITE_ENTREPRISE + Metadata::PATH_SERVICE %>
	  <a href="http://rubyonrails.org/"><%= logo_ruby %></a>
          <%= link_to Metadata::COPYRIGHT_APPLICATION, Metadata::SITE_ENTREPRISE %>
        </td>
      </tr>
    </table>
  </div><!-- end of footer -->

</body>
</html>
