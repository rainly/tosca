<h1><%= _('List of the versions') %> <%=image_spinner%></h1>

<% options = { :create_label => _('a version'), :remote_url => versions_path } %>
<% paginated_section(@versions, options) do %>
 <% titles = [ _('Software'), _("Versions")] %>
 <%= show_table(@versions, Version, titles) { |v|
   result = ''
   result << "<td>#{link_to v.software, software_path(v.software)}</td>"
   result << "<td>#{v.name}</td>"
   result << "#{link_to_actions_table v}"
 }%>
 <%= page_entries_info @versions %><br />
<% end %>
