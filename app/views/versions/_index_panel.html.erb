<% options = { :update => 'col1_content', :method => :get,
    :url => versions_path,
    :before => "Element.show('spinner')",
    :success => "Element.hide('spinner')" } %>

<% form_remote_tag( options.dup.update(:html => {
    :id => 'filters', :name => 'filters', :method => :get})) do %>

<%# used for iteration in ajaxified list %>
<%= hidden_field_tag 'page', '1' %>

<div class="menu_title" onclick="Element.toggle('menu_consultation')">
  > <%= t('Consultation')%></div>
<ul id="menu_consultation">
 <li><%= link_to t('Software list'), :controller => 'softwares' %></li>
 <li><%= link_to t('Releases list'), :controller => 'releases' %></li>
</ul>


<div class="menu_title" onclick="Element.toggle('menu_recherche')">
  > <%= t('Search')%></div>
<ul id="menu_recherche">
  <li><b><%= t('Version')%> </b><br />
      <%= text_field :version, :name %></li>
</ul>

<div class="menu_title" onclick="Element.toggle('menu_perimetre')">
  > <%= t('Perimeter')%></div>
<ul id="menu_perimetre">
  <li><b><%= t('Versions')%> : </b><%=  @count[:versions] %></li>
</ul>

<% end %>
<%= observe_form 'filters', options %>
