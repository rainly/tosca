<% for column in Image.content_columns %>
<p>
  <b><%= column.human_name %>:</b> <%= @image.send(column.name) %>
</p>
<% end %>
<%= image_tag url_for_file_column("image", "image", "thumb") %><br />
<%= image_tag url_for_file_column("image", "image", "medium") %><br />
<%= image_tag url_for_file_column("image", "image") %><br />

<%= link_to _("Edit"), edit_image_path(@image) %> |
<%= link_to _("Back"), images_path %>
