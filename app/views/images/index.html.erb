<h1><%= _("List of images") %></h1>

<% paginated_section(@images, :create_label => _("an image")) do %>
 <% titles = [_("Formatted"), _("Description")]%>
 <%= show_table(@images, Image, titles) do |p|
   result = ''
   result << "<td>#{self.image_tag(url_for_file_column(p, 'image', 'thumb')) if p.image}</td>"
   result << "<td>#{p.description}</td>"
   result << "#{link_to_actions_table(p)}"
 end %>
 <%= page_entries_info @images %><br />
<% end %>
