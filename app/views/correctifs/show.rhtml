<% for column in Correctif.content_columns %>
<p>
  <b><%= column.human_name %>:</b> <%=h @correctif.send(column.name) %>
</p>
<% end %>


<p><b>Patch:</b> <%= link_to_file @correctif, 'patch' %><p>


<%= show_liste(@correctif.demandes, 'demande') { |d| 
  link_to_demande(d) } %><br />

<%= show_liste(@correctif.reversements, 'reversement') { |r| 
  link_to_reversement(r) } %><br />

<%= show_liste(@correctif.paquets, 'paquet(s) sur lesquels il a été appliqué') { |p| 
  link_to_paquet(p) } %><br />

<%= show_liste(@correctif.binaires, 'binaire(s) résultant') { |b| 
  link_to_binaire(b) } %><br />


<%= link_to 'Editer', :action => 'edit', :id => @correctif %> |
<%= link_to 'Retour à la liste', :action => 'list' %>
