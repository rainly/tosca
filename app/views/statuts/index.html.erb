<h1><%= t(:Index) %></h1>

<table>
  <tr>
    <th><%= t(:Id) %></th>
  <% for column in Statut.content_columns %>
    <th><%= t("Statut.#{column.human_name}") %></th>
  <% end %>
  </tr>

<% for statut in @statuts %>
  <tr class=<%= "issue_#{statut.id}" %>>
    <td><%= statut.id %>
  <% for column in Statut.content_columns %>
    <td><%= statut.send(column.name) %></td>
  <% end %>
  <%= link_to_actions_table(statut) %>
  </tr>
<% end %>
</table>
