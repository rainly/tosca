<%= error_messages_for :team %>

<p>
  <label for="team_name"><%= _("Name of the Team") %></label>
  <%= text_field :team, :name %>
</p>
<p>
  <label for="team_motto"><%= _("Motto of the Team") %></label>
  <%= text_field :team, :motto %>
</p>
<p>
  <label for="team_contact_id"><%= _("Manager of the Team") %></label>
  <%= select :team, :contact_id, @users %>
</p>
<p>
  <fieldset>
    <legend><%=_('Team members')%></legend>
    <%= hbtm_check_box(@team.users, @users,
                         'team[user_ids]', :size => 3) %>
  </fieldset>
</p>
<p>
  <fieldset>
    <legend><%=_('Contracts of the team')%></legend>
    <%= auto_complete_list :contract, :name, @team.contracts, "team[contract_ids]" %>
  </fieldset>
</p>
