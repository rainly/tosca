<div class="subcolumns">
 <div class="c50l"><div class="show">
  <p>
   <% manager = @team.contact %>
   <b><%= t(:'Team.Contact') %> : </b><%= link_to manager.name, account_path(manager) %>
  </p>
  <p><b><%= t(:'Team.Motto') %> : </b><%= @team.motto %></p>
  <%= show_list(@team.users, t(:'Team.Members')) {|u| link_to u.name, account_path(u)} %>
 </div></div> <div class="c50r">
