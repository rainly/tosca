<h1><%= _("Manage tags for the request %s") % @request_tosca.pretty_id %> <%=StaticImage::spinner%></h1>
<div class="subcolumns">
  <div class="c50l">
    <div class="show">
      <h2><%= _("Add a tag to this request") %></h2>
      <% success = update_page do |page|
           page.hide 'spinner'
           page['tag_name'].value = ""
         end
         options = { :url => ajax_add_tag_request_url(@request_tosca),
          :method => :post, :with => "'tag_name=' + $('tag_name').value",
          :update => "tags_request",
          :before => "Element.show('spinner')",
          :success => success }
      %>
      <%= text_field_tag :tag_name %>
      <%= submit_to_remote "add_tag_button", _("Add"), options %>
      <% observe_field :tag_name %>
    </div>
  </div>
  <div class="c50r">
    <div class="show">
      <h2><%= _("Tags of this request") %></h2>
      <%= render :partial => "requests/tags/show_tags" %>
    </div>
  </div>
</div>
