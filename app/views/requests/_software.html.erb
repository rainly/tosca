<div id="software">
  <% if @softwares.size > 1 %>
    <%= select_empty(:request, :software_id, @softwares) %>
  <% elsif @softwares.size == 1 %>
    <%# We have a collect [software.name, software.id ] %>
    <%= @softwares.first.first %>
    <%= hidden_field(:request, :software_id, :value => @softwares.first.last) %>
  <% end %>

  <% options = PagesHelper::SPINNER_OPTIONS.dup.update(:with =>
      "Form.serializeElements($('request_software_id','request_contract_id'))",
      :url => ajax_display_version_requests_path) %>
  <%= observe_field "request_software_id", options unless @softwares.empty? %>
</div>
