<%= error_messages_for 'contract' %>

<div class="subcolumns">
  <div class="c50l">
    <div class="show tinymce">
    <table>
      <tr>
        <th><label for="contract_client_id"><%=t('Customer')%></label></th>
        <td><%= select(:contract, :client_id, @clients) %></td>
      </tr><tr>
        <th><label for="contract_salesman_id"><%= t("Salesman Contact") %></label></th>
        <td><%= select_empty :contract, :salesman_id, @engineers %></td>
      </tr><tr>
        <th><label for="contract_tam_id"><%= t("Technical Account Manager") %></label></th>
        <td><%= select_empty :contract, :tam_id, @engineers %></td>
      </tr><tr>
        <th><label for="contract_mailinglist"><%=t("Internal mailing list")%></label></th>
        <td><%= text_field 'contract', 'internal_ml'  %></td>
      </tr><tr>
        <th><label for="contract_customer_ml"><%=t("Customer mailing list")%></label></th>
        <td><%= text_field 'contract', 'customer_ml'  %></td>
      </tr><tr>
        <th><label for="contract_inactive"><%=t("Inactive")%></label></th>
        <td><%= check_box 'contract', 'inactive'  %></td>
      </tr><tr>
        <th><label for="contract_start_date"><%= t('Start') %></label></th>
        <td><%= date_select :contract, :start_date %></td>
      </tr><tr>
        <th><label for="contract_end_date"><%=t('End')%></label></th>
        <td><%= date_select :contract, :end_date %></td>
      </tr><tr>
        <th><label for="contract_technological_survey"><%= t("Technological survey") %></label></th>
        <td><%= check_box :contract, :technological_survey %></td>
      </tr><tr>
        <th><label for="contract_newsletter"><%= t("Newsletter") %></label></th>
        <td><%= check_box :contract, :newsletter  %></td>
      </tr><tr>
        <th><label for="contract_name"><%= t("Domain") %></label></th>
        <td><%= text_field :contract, :name %></td>
      </tr><tr>
        <th colspan="2"><label><%=t('Commitments')%> <%= link_to_new_commitment %></label></th>
      </tr><tr>
        <td colspan="2"><%= show_form_commitments(@contract.commitments, @commitments) %></td>
      </tr>
    </table>
</div></div>
<div class="c50r">
  <div class="show">
    <table>
     <tr>
      <th><label><%= t("Type") %></label></th>
       <td><% Contract::Rules.each do |r| %>
               <%= radio_button(:contract, :rule_type, r) %>
               <%= t(r) %> <%= link_to_new_rule(r) %>
           <% end %></td>
     </tr><tr>
       <th><label for="contract_rule_id"><%= t('Ruled by') %></label></th>
       <td><div id="contract_rules">
          <%= render :partial => 'rules' %>
	   </div></td>
     </tr><tr>
     <% options = {:size => 2, :style => 'text-align: center;' } %>
       <th><label for="contract_opening_time"><%= t("Schedules") %></label></th>
       <td><%= text_field :contract, :opening_time, options  %><%= t("h") %> -
           <%= text_field :contract, :closing_time, options  %><%= t("h") %></td>
     </tr><tr>
       <td colspan="2">
       <fieldset>
        <legend><%=t('Engineers assigned to this contract')%></legend>
        <%= auto_complete_list :user, :name, @contract.engineer_users, 'contract[engineer_user_ids]' %>
       </fieldset>
      </td>
     </tr>
     <tr>
       <td colspan="2">
       <fieldset>
        <legend><%=t('Teams managing this contract')%></legend>
        <%= hbtm_check_box(@contract_team, @teams,
                         'contract[team_ids]', :size => 3) %>
       </fieldset>
      </td>
     </tr>
    </table>
</div></div>
</div>
