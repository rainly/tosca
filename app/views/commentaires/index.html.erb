<h1><% _('List of the comments') %></h1>

<%= show_pages_links(@commentaire_pages, _('a comment')) %>

<% titles = [_('Request'), _('Body'), _('Created on'), _('Updated on')]%>
<%= show_table(@commentaires, Commentaire, titles) { |c|
  result = ''
  result << "<td>#{link_to_demande c.demande}</td>"
  result << "<td>#{indent c.corps}</td>"
  result << "<td>#{c.created_on_formatted}</td>"
  result << "<td>#{c.updated_on_formatted}</td>"
  result << "#{link_to_actions_table c}"
}%>

