<h1>
  <%= public_link_to _('Home'), welcome_path %> >
    <%= public_link_to _('Contributions'), select_contributions_path %> >
      <% if @software %>
        <%= public_link_to_software(@software) %>
      <% else %>
        <%= public_link_to(_('All'), softwares_path) %>
      <% end %>
</h1>

<% links = show_pages_links(@contribution_pages, _('a new contribution')) %>
<%= links %>

<% @contributions.each do |contribution| %>
  <h2>
   <%= link_to_edit(contribution) %>
   <%= public_link_to contribution.name, contribution_path(contribution) %>
  </h2>
  <%= "#{contribution.synthesis}<br />" %>
<% end %>

<br/>
<%= links %>
