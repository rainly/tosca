<p>
  <%= public_link_to t('Home'), welcome_path %> >
    <%= public_link_to t('Contributions'), select_contributions_path %> >
      <% if @software %>
        <%= public_link_to_software(@software) %>
      <% else %>
        <%= public_link_to(t('All'), softwares_path) %>
      <% end %>
</p>

<% paginated_section(@contributions, :create_label => t('a new contribution')) do %>
 <% @contributions.each do |contribution| %>
  <h2>
   <%= link_to_edit(contribution) %>
   <%= public_link_to contribution.name, contribution_path(contribution) %>
  </h2>
  <%= "#{contribution.synthesis}<br />" %>
 <% end %>
<% end %>

<br/>
