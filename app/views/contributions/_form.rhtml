  #       :before => "Element.show('spinner')", :success => "Element.hide('spinner')",
  #       :url => ajax_paquets_contributions_path ,:with => 'id' %>

</td></tr>
<tr><td colspan="2">

<div id="paquets">
  <%= render :partial => "liste_paquets" %>
</div>

</td></tr>
</table>
<!--[eoform:contribution]-->
