<h1><%= logo_client(@client) %>
  <%= link_to_edit edit_client_path(@client)%> </h1>

<div class="subcolumns">
  <div class="c50l">
    <div class="show">
      <table>
      <% for column in Client.content_columns %>
       <tr>
        <td><b><%= _(column.human_name) %>:</b></td>
        <td><%= @client.send(column.name) %></td>
       </tr>
      <% end %>

      <% unless @client.address.blank? %>
       <tr><td colspan="2">
        <fieldset>
         <legend><%= _('Address')%></legend><%= @client.address %>
        </fieldset>
       </td></tr>
      <% end %>
      </table>
    </div>
    <div class="show">
       <%= link_to_new_contract(@client.id) %>
       <%= show_list(@client.contracts, _('contract')) do |c|
        result = ''
        edit = link_to_edit(edit_contract_path(c))
        result << "#{edit}&nbsp;" if edit
        result << "<b>#{link_to c.rule.name, contract_path(c)}</b>"
        result << ' ' << c.rule.short_description
        result << _(" from %s to %s") % [c.start_date_formatted, c.end_date_formatted]
        result << ' '
        if c.rule.max == -1
          result << _("on your complete system")
        else
          result << _("concerning %s releases") % c.releases.size
        end
        result << '.'
        result << show_table_commitments(c.commitments)
        result << "<b>#{c.rule.elapsed_formatted(c.total_elapsed, c)}</b> "
        result << _('has already been spent')
        result
      end %>
      </td>
    </tr>

        result } %>
       <b><%= _("View") %></b> <%=_("the")%>
          <%= link_to(_('Activity report'), general_reporting_path) %><br/>
       <b><%= _("View") %></b> <%=n_('the','the',2)%>
          <%= link_to(_('Contributions'),
                list_contribution_path(:id => 'all', :client_id => @client.id)) %>
      </div>
  </div>
  <div class="c50r">
    <div class="show">
      <table>
        <tr><td>
         <%= show_list(@client.socles, _('system')) do |s|
               link_to_socle(s).to_s
             end %>
         <% unless @client.issues.empty? %>
          <b><%= n_('Issue', 'Issues', @client.issues.size) %></b>
          <div class="long_bloc_scroll">
           <%= show_list(@client.issues) {|d| link_to_issue(d) } %>
          </div>
         <% end %>
        </td></tr>
      </table>
    </div>
  </div>
</div>

<%= link_to_edit_and_list @client %>
