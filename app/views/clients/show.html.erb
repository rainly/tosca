<h1><%= (@client.image ? logo_client(@client) : @client.name) %>
  <%= link_to_edit edit_client_path(@client)%> </h1>

<table class="topbox">
 <tr>
  <td style="width: 36em;">
   <table class="show">
    <% for column in Client.content_columns %>
     <tr>
      <td><b><%= _(column.human_name) %>:</b></td>
      <td><%= @client.send(column.name) %></td>
     </tr>
    <% end %>

    <% unless @client.adresse.blank? %>
     <tr><td colspan="2">
      <fieldset>
       <legend><%= _('Address')%></legend><%= @client.adresse %>
      </fieldset>
     </td></tr>
    <% end %>
   </table>

   <%= link_to_new_contract(@client.id) %>
   <%= show_list(@client.contracts, _('contract')) { |c|
    result = ''
    edit = link_to_edit(edit_contract_path(c))
    result << "#{edit}&nbsp;" if edit
    result << "(#{c.chrono})&nbsp;" if @ingenieur and c.chrono != 0
    result << "<b>#{link_to c.rule.name, contract_path(c)}</b>"
    result << _(" from %s to %s") % [c.ouverture_formatted, c.cloture_formatted]
    result << ' '
    if c.rule.max == -1
      result << _("on your complete system")
    else
      result << _("concerning %s releases") % c.releases.size
    end
    result << '.'
    result << show_table_engagements(c.engagements)
    result } %>
   <b><%= _("View") %></b> <%=_("the")%>
      <%= link_to(_('Activity report'), general_reporting_path) %><br/>
   <b><%= _("View") %></b> <%=n_('the','the',2)%>
      <%= link_to(_('Contributions'),
            list_contribution_path(:id => 'all', :client_id => @client.id)) %>
  </td><td>

   <%= show_list(@client.socles, _('system')) { |s|
      link_to_socle(s).to_s
   } %>

   <% unless @client.demandes.empty? %>
    <div class="long_bloc_scroll">
    <%= show_list(@client.demandes, _('request')) {|d|
      link_to_demande(d) } %>
    </div>
   <% end %>
  </td>
 </tr>
</table>

<%= link_to_edit_and_list @client %>
