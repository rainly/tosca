<%= error_messages_for 'client' %>

<table class="topbox">
 <tr>
  <td>
   <table class="show">
    <tr>
     <td><label for="client_name"><%= _("Name") %></label></td>
     <td><%= text_field :client, :name  %></td>
    </tr><tr>
     <td colspan="2"><p><label for="client_description"><%= _("Description") %></label><br />
        <%= text_area :client, :description, :rows => 10 %></p></td>
    </tr><tr>
     <td colspan="2"><label for="client_adresse"><%= _("Address") %></label><br />
         <%= text_area :client, :adresse, :rows => 9 %></td>
    </tr>
   </table>
  </td><td  >
   <table class="show" style="width: 36em;">
    <tr>
     <td><label for="client_inactive"><%= _("Inactive") %></label></td>
     <td><%= check_box :client, :inactive %></td>
    </tr><tr>
     <td><label for="client_image"><%= _("Logo") %></label></td>
     <td><%= text_field :client, :image  %></td>
    </tr><tr>
     <td><label for="client_code_acces"><%= _("Access code") %></label></td>
     <td><%= text_field :client, :code_acces, :size => 5 %></td>
    </tr><tr>
     <td colspan="2">
      <p><label><%= _("Systems") %></label></p>
         <%# as of Firefox 2.x, the px approach is scalable between %>
         <%# different resolution, when em is not %>
         <div class="bloc_scroll" style="height: 299px;">
         <%= hbtm_check_box(@client.socles, @socles, 'client[socle_ids]', :size => 2) %>
         </div>
     </td>
    </tr>
   </table>
  </td>
 </tr>
</table>
