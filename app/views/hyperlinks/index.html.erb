<h1><%= t("Listing the urls") %></h1>

<table>
  <tr>
    <th><%= t("Name") %></th>
    <th><%= t("Model type") %></th>
    <th><%= t("Model id") %></th>
  </tr>

<% for hyperlink in @hyperlinks %>
  <tr>
    <td><%=h hyperlink.name %></td>
    <td><%=h hyperlink.model_type %></td>
    <td><%=h hyperlink.model_id %></td>
    <td><%= link_to t('Show'), hyperlink %></td>
    <td><%= link_to t('Edit'), edit_hyperlink_path(hyperlink) %></td>
    <td><%= link_to t('Destroy'), hyperlink, :confirm => t('Are you sure?'), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('A new url'), new_hyperlink_path %>
