
<% if @user_recipient # and not session[:user].beneficiaire %>

<div class="show">

<h1><b><%= _('Recipient') %></b></h1><br />

<p><label for="beneficiaire_client">Client</label><br />
  <%= collection_select(:user_recipient, :client_id, @clients, :id, :nom) %>
</p>

<% if false #deactivated for now. %>
<p><label for="beneficiaire_notifier_subalternes"> <%= _('Notify subalterns') %> </label><br />
<%= check_box 'beneficiaire', 'notifier_subalternes'  %></p>

<p><label for="beneficiaire_notifier"> <%= _('Notify at') %> </label><br />
<%= check_box 'beneficiaire', 'notifier'  %></p>

<p><label for="beneficiaire_notifier_cc"> <%= _('Notify cc') %> </label><br />
<%= check_box 'beneficiaire', 'notifier_cc'  %></p>
<% end %>

</div>

<% end %>

