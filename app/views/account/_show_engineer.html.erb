<% if @user.engineer? %>

<div title="<%= t("Show an account") %>" class="show">
  <h1><b><%= t('Engineer') %></b></h1><br />

  <p><b><%= t('Knowledges') %> <%= link_to_new_knowledge %> : </b>
  <% unless @user.knowledges.empty? %>
     <% options = {:edit => 'knowledge', :no_title => true } %>
     <%= show_list(@user.knowledges, '', options) do |k|
        link_to_knowledge k
      end %>
  <% end %>
  </p>

  <p><b><%= t('Contracts') %>:</b></p>
  <ul>
    <% @user.contracts.each do |c| %>
      <li><%= c.name %></li>
    <% end %>
  </ul>

</div>

<% end %>
