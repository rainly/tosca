
<% if @user_engineer %>
  <h1><b><%= _('Engineer') %></b></h1><br />

  <p><label for="ingenieur_chef_de_projet"><%= _('Project manager') + ' ?'%></label>
  <%= check_box 'ingenieur', 'chef_de_projet' %></p>

  <p><label for="ingenieur_expert_ossa"><%= _('OSSA expert') + ' ?'%></label>
  <%= check_box 'ingenieur', 'expert_ossa' %></p>

  <p><label for="ingenieur_competences"><%= _('Skills') + ' ?' %></label><br />
   <%= hbtm_check_box( @user_engineer.competences, @competences, 'ingenieur[competence_ids]', :size => 4) %></p>

  <label for="user_contrats"><%= _('Contracts')%></label><br />
   <%= hbtm_check_box( @user.contrats, @contrats, 'user[contrat_ids]', :size => 2) %>

   <%= observe_client_field %>
<% end %>
