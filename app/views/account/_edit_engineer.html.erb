<% create_account = (controller.action_name == 'signup') %>

<% if @user_engineer %>

  <h1><b><%= _('Engineer') %></b></h1><br />

  <p><label for="ingenieur_chef_de_projet"><%= _('Project manager') + ' ?'%></label>
  <%= check_box 'user_engineer', 'chef_de_projet' %></p>

  <p><label for="ingenieur_expert_ossa"><%= _('OSSA expert') + ' ?'%></label>
  <%= check_box 'user_engineer', 'expert_ossa' %></p>

  <p><b><%= _('Knowledges') %> <%= link_to_new_knowledge %> : </b></p>
  <% unless @user_engineer.knowledges.empty? %>
     <% options = {:edit => 'knowledge', :no_title => true } %>
     <%= show_liste(@user_engineer.knowledges, '', options) do |k|
        link_to_knowledge k
      end %>
  <hr />
  <% end %>

  <table width="100%" border="0"><tr>
    <th><%= _('Contracts')%></th>
    <td style="text-align: right;">
       (<%= _('only') %>
      <%= select(:user_recipient, :client_id, @clients) %>
        <%= _('contracts') %>)
    </td>
  </tr></table>
  <hr />
   <div id="contracts" class="long_bloc_scroll">
     <%= hbtm_check_box( @user.contrats, @contrats, 'user[contrat_ids]', :size => 1) %>
   </div>
  <%= observe_client_field if create_account %>
  <%= observe_client_list %>
<% end %>
