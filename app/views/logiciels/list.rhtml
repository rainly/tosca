<% options = { :update => 'content',
    :url => '/logiciels/update_list',
    :before => "Element.show('spinner')",
    :success => "Element.hide('spinner')" } %>


<% form_remote_tag( options.update(:html => { :id => 'filters', :name => 'filters'})) do %>
<div class="summary">
  <%= render_partial 'infos_logiciels' %>
</div>
<% end %>


<%= observe_form 'filters', options %>

<div id="content">
  <%= render_partial 'softwares_list' %>
</div>





