<%= error_messages_for 'logiciel' %>

<!--[form:logiciel]-->
<p><label for="logiciel_nom"><%=_('Name')%></label><br/>
<%= text_field 'logiciel', 'nom'  %></p>

<p><label for="logiciel_resume"><%=_('Summary')%></label><br/>
<%= text_field 'logiciel', 'resume' %></p>

<p><label for="logiciel_description"><%=_('Description')%></label><br/>
<%= text_area 'logiciel', 'description', :cols => 60 %></p>


<p><label for="logiciel_referent"><%=_('Base name')%></label><br/>
<%= text_field 'logiciel', 'referent' %></p>

<p><label for="logiciel_licence_id"><%=_('Copyright')%></label><br/>
  <%= select("logiciel", "license_id",
	@licenses.collect{|l| [ l.nom, l.id]}) %></p>

<p><label for="logiciel_groupe_id"><%=_('Group')%></label><br/>
 <%= select("logiciel", "groupe_id",
	@groupes.collect{|l| [ l.nom, l.id]}) %></p>

<p><label for="logiciel_competence_ids"><%=_('Technologies')%></label></p>
<%= hbtm_check_box( @logiciel.competences, @competences, 'logiciel[competence_ids]', :size => 4) %>

