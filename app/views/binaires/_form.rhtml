<%= error_messages_for 'binaire' %>

<!--[form:binaire]-->

<p><label for="binaire_paquet">Paquet</label><br/>
  <%= select('binaire', 'paquet_id',
	@paquets.collect{|l| [l.to_s, l.id] }
	)
  %>
</p>

<p><label for="binaire_socle">Socle</label><br/>
  <%= collection_select(:binaire, :socle_id, @socles, :id, :nom) %>
</p>

<p><label for="binaire_arch">Arch</label><br/>
  <%= collection_select(:binaire, :arch_id, @arches, :id, :nom) %>
</p>

<p><label for="binaire_nom">Nom</label><br/>
<%= text_field 'binaire', 'nom'  %></p>

<p><label for="binaire_configuration">Configuration</label><br/>
<%= text_area 'binaire', 'configuration'  %></p>


<p><label for="binaire_archive">Archive</label><br/>
<%= file_column_field 'binaire', 'archive'  %></p>

<p>Contributions :</p>
<%= hbtm_check_box( @binaire.contributions, @contributions, 'binaire[contribution_ids]', :size => 3) %>


<!--[eoform:binaire]-->

