<%= error_messages_for 'machine' %>

<!--[form:machine]-->
<div class="show" style="width: 70%">
  <div style="float:left; margin_right: 30px; padding-right: 40px;">
    <p><label for="machine_acces"><%= _('Access : DNS (IP)')%></label><br />
    <%= text_field 'machine', 'acces'  %></p>

    <p><label for="machine_virtuelle"><%= _('Virtual') << '?' %></label> 
    <%= check_box 'machine', 'virtuelle'%></p>

    <p><label for="machine_hote_id"><%= _('Host')%></label> 
    <%= select('machine', 'hote_id', 
    @hotes.collect{|h| [h.acces, h.id]}, :include_blank => true) %></p>


    <p><label for="machine_socle_id"><%= _('System')%></label><br />
    <%= select('machine', 'socle_id', 
    @socles.collect{|l| [ l.name, l.id]}) %></p>
  </div>
  <div style="float: left">
    <p><label for="machine_description"><%= _('Description')%></label><br />
    <%= text_area 'machine', 'description'  %></p>
  </div>
  <div style="clear: both"></div>

</div>
<!--[eoform:machine]-->

