
<table><tr><td>
<%= start_form_tag :action => "list", :filter => @filter, :client => @client %>
  <p><label for="demande_resume">Spécifier une année : </label>
  <%= text_field 'report', '', "mois" => @annee  %>
  <%= submit_tag "Consulter" %></p>
<%= end_form_tag %>
</td><td>
</td></tr></table>

<% @clients.each do |c| %>
  <h1>Historique du <%= c.nom %> pour <%= @annee %></h1>
   <h2>Temps de prise en compte des demandes</h2>
   <%= report_table(:"temps_rappel_#{c.id}", :titre => 'Prise en compte') %>
   <label>Estimation faite en minutes</label><br />

   <h2>Temps de contournement des demandes (en JO)</h2>
   <%= report_table(:"temps_contournement_#{c.id}", :titre => 'Contournement') %>
   <label>Estimation faite en jours ouvrés</label><br />

   <h2>Temps de correction des demandes</h2>
   <%= report_table(:"temps_correction_#{c.id}", :titre => 'Correction') %>
   <label>Estimation faite en jours ouvrés</label><br />

<% end %>
