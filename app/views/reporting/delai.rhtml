
<table><tr><td>
<% form_tag reporting_path(:filter => @filter, :client => @client) do %>
  <p><label for="demande_resume"><%=_('Choose one year:')%></label>
  <%= text_field 'report', '', "mois" => @annee  %>
  <%= submit_tag _('Show') %></p>
<% end %>
</td><td>
</td></tr></table>

<% @clients.each do |c| %>
  <h1><%= _('History of %s for %s') % [ c.nom, @annee ] %></h1>
   <h2><%=_('Time of taking into account the requests')%></h2>
   <%= report_table(:"temps_rappel_#{c.id}", :titre => @titres[:temps_rappel]) %>
   <label><%=_('Estimation in minutes')%></label><br />

   <h2><%=_('Workaround time of the requests in working days')%></h2>
   <%= report_table(:"temps_contournement_#{c.id}", :titre => @titres[:temps_contournement]) %>
   <label><%=_('Estimate made in working days')%></label><br />

   <h2><%=_('Requests correction time')%></h2>
   <%= report_table(:"temps_correction_#{c.id}", :titre => @titres[:temps_correction]) %>
   <label><%=_('Estimation in working days')%></label><br />

<% end %>
