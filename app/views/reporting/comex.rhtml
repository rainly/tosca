<div class="content" id="content">
  <h1><%= _('OSSA activity per week') %></h1><br />
  <% form_tag comex_resultat_reporting_url, :method => :get do %>
    <table class='show'>
      <tr>
        <th><%= _('Please select')%></th>
        <th><%= _('Select customer')%></th>
      </tr>
      <tr>
        <td>
          <label for="week_num"><%= _('Number of the week:')%></label>
          <%= text_field :results, :week_num, :size => 2,
            :value => Time.now.strftime("%W") %>
        </td>
        <td rowspan='5'><%= box_clients(9)%></td>
      </tr>
      <tr><th><%= _('Or search by period') %></th></tr>
      <tr>
        <td>
          <label for="first_day"><%= _('First day : ') %></label>
          <%= text_field :results, :first_day, :size =>8 %>
          <span class="calendarPicker"><%= image_date_from %></span>
          <%= script_date('results_first_day', 'date_from') %>
        </td>
      </tr>
      <tr>
        <td>
          <label for="end_day"><%= _('Last day : ') %></label>
          <%= text_field :results, :end_day,  :size => 8 %>
          <span class="calendarPicker"><%= image_date_to %></span>
          <%= script_date('results_end_day', 'date_to') %>
          </td>
      </tr>
      <tr>
        <td align='center'>
          <%= submit_tag _('See the report for this week'),
            {:name => "reporting" } %>
        </td>
        <td align='center'>
          <%= submit_tag _("See the report of requests' SLA"), {:name => "cns"}%>
        </td>
      </tr>
    </table>
    <% end %>
</div>
