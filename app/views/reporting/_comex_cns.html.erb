<div class="content">
<h1><%= t('SLA report') %> </h1>
<h2><%= t('Caption') %> </h2>
<p><%=t('The progressions bar represent the progress ratio of the contract: ')%></p><br />
<ul>
  <li><%=progress_bar(0)%><%=t('The contract has not been started yet') %></li>
  <li><%=progress_bar(25) %> 25%</li>
  <li><%=progress_bar(50) %> 50%</li>
  <li><%=progress_bar(75) %> 75%</li>
  <li><%=progress_bar(110) %> <%= t('The contract is outdated! ') %><br /><br /></li>
</ul>
 <p><%= t('The indicated time is the one elapsed before the end of the SLA.') %></p>
 <ul>
  <% @percents.each do |c| %>
    <% c_id = @percents.index(c) %>
    <li><h2><%= @extra[c_id][:name] %></h2>
    <table class="show" width='100%'>
        <tr>
          <th><%= t('Id')%></th>
          <th><%= t('Workaround')%></th>
          <th><%= t('Correction')%></th>
          <th><%= t('Summary')%></th>
        </tr>
        <% @extra[c_id][:issues_ids].each do |d_id| %>
        <% d= c[d_id] %>
        <tr <%= tr_attributes issue_path(d_id) %> >
          <td><%= c.index(d) %></td>
          <td>
            <%= progress_bar( d[:contournement].to_i) unless
                d[:mesg_contournement] == '-' %>
            <%= d[:mesg_contournement] %>
          </td>
          <td>
            <%=progress_bar( d[:correction].to_i ) unless
              d[:mesg_correction] == '-'%>
            <%= d[:mesg_correction] %>
          </td>
          <td><%= d[:resume] %></td>
        </tr>
        <% end %>
      </table></li>
  <%  end %>
  </ul>
</div>
