<%= div_toggle t('Statictics'), 'menu_stats', :class => "menu_title" %>
<ul class="menu" id="menu_stats">
  <li>
    <b><%= t('Number of new issues') %></b> : <%= @statistics[:new_issues] %>
  </li>
  <li>
    <b><%= t('Number of closed issues') %></b> : <%= @statistics[:closed_issues] %>
  </li>
  <% if @issues_by_contract.length > 0 %>
    <li>
      <b> <%= t('Number of open issues by contracts') %></b>
      <ul>
        <% @issues_by_contract.each_pair do |key, value| %>
          <li>
            <b><%= link_to_contract(key) %></b> : <%= value.length %>
          </li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>