<%# gap : espacement à l'affichage
  # break_here : saut de page à l'impression  %>
<% gap = '<p>&nbsp;</p>'*2 %>

<div class='report' >
<%= render_partial 'header' %>

<h2 class="chapter"><%= _('Summary') %></h2>
<%= render_partial 'summary' %>

<%# =indent @data.inspect.gsub(/, :/,"\n") %><br />
<%# =indent @colors.inspect.gsub(/, :/,"\n") %><br />
<%# =indent @data[:severity_total].sort{|x,y| x[0].to_s <=> y[0].to_s}.inspect.gsub(/, :/,"\n") %><br />

<h2 class="chapter"><a name="<%=_('Introduction')%>"><%=_('Introduction')%></a></h2>
<%= render_partial 'introduction' %><%= gap %>
<p class="break_here"/>

<%# do NOT forget to update _summary if you change a title ! %>

<h1 class="chapter"><a name="<%=_('Distribution of your issues')%>">1. <%=_('Distribution of your issues')%></a></h1>
<h2 class="chapter"><a name="<%=_('distribution')%>">1.1 <%= @titles[:distribution] %></a></h2>
 <%= report_distribution(:distribution, :with2rows => _('Issues')) %><%= gap %>
 <%= report_evolution(:distribution, :with2rows => _('Issues')) %><%= gap %>
<h2 class="chapter"><a name="<%=_('severity')%>">1.2 <%= @titles[:severity] %></a></h2>
 <%= report_distribution(:severity, :with2rows=> _('Issues')) %><%= gap %>
 <%= report_evolution(:severity, :with2rows => _('Issues')) %><%= gap %>
<h2 class="chapter"><a name="<%=_('resolution')%>">1.3 <%= @titles[:resolution] %></a></h2>
 <%= report_distribution(:resolution, :with2rows => _('Issues')) %><%= gap %>
 <%= report_evolution(:resolution, :with2rows => _('Issues')) %><%= gap %>
<p class="break_here"/>

<h1 class="chapter"><a name="<%=_('Various statistics')%>">2. <%= _('Various statistics') %></a></h1>
<h2 class="chapter"><a name="<%=_('evolution')%>">2.1 <%= @titles[:evolution] %></a></h2>
 <%= report_evolution(:evolution, :with2rows => _('Number')) %><%= gap %>
<h2 class="chapter"><a name="<%=_('canceled')%>">2.2 <%= @titles[:cancelled] %></a></h2>
 <%= report_distribution(:cancelled, :with2rows => _('Issues')) %><%= gap %>
 <%= report_evolution(:cancelled, :with2rows => _('Issues')) %><%= gap %>
